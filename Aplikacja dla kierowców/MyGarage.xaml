<Page x:Class="Aplikacja_dla_kierowców.MyGarage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Aplikacja_dla_kierowców"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyGarage">

    <Border>
        <StackPanel>
            <TextBlock Text="Lista samochodów: "/>
            <StackPanel x:Name="_Standard"/>
            <TextBlock Text="Ulubione: " />
            <StackPanel x:Name="_Favourite"/>
            <Button Content="Dodaj nowy samochód" x:Name="AddCar" Click="AddCar_Click"/>
            <Frame x:Name="DisplayFrame" NavigationUIVisibility="Hidden"/>
            <TextBlock Text="Uwaga! Usunięcie wszystkich wpisów wiąże się z usunięciem konta użytkownika"/>
        </StackPanel>
    </Border>
</Page>
